@model Inmobiliaria_Tanuz.Models.Pagos

@{
    ViewData["Title"] = "Create";

    Contrato c = ViewBag.Contrato as Contrato;

}

<h3 style="font-family:Tahoma" class="text-center">Nuevo Pago</h3>

<hr/>
<div class="row align-tex-center">
    <div class="col-lg-12">
        <form asp-action="Create" class="form-inline">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-lg-6">
                <label asp-for="ContratoId" class="control-label">Contrato</label>
                <input asp-for="ContratoId" value="@c.IdContrato" class="form-control-file"  />
                <span asp-validation-for="ContratoId" class="text-danger"></span>
            </div>
            <div class="col-lg-6">
                <label asp-for="NroDePago" class="control-label">Nº de pago</label>
                <input asp-for="NroDePago" value="@ViewBag.NroDePago" class="form-control-file" />
                <span asp-validation-for="NroDePago" class="text-danger"></span>
            </div>
            <div class="col-lg-6">
                <label asp-for="Fecha" class="control-label">Fecha</label>
                <input asp-for="Fecha" class="form-control-file" type="date" />
                <span asp-validation-for="Fecha" class="text-danger"></span>
            </div>
            <div class="col-lg-6">
                <label asp-for="Importe" class="control-label">Importe</label>
                <input asp-for="Importe" value="@c.Inmueble.Precio" class="form-control-file" />
                <span asp-validation-for="Importe" class="text-danger"></span>
            </div>
            <div class="col-lg-3">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
            <div col-lg-3>
               <a asp-controller="Contrato" asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>

        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
