@model IEnumerable<Inmobiliaria_Tanuz.Models.Contrato>

<h3>@ViewBag.Title</h3>
   


<h1 style="font-family:Tahoma">Lista de Contratos.</h1>
<hr>

    <p>
        <a class="btn btn-outline-secondary" style="font-family:Tahoma" asp-action="Create">Crear nuevo</a>
    </p>
    <form class="form-inline" asp-action="BuscarContratoPorFecha" asp-controller="Contrato">
        <div class="input-group-sm">
            <label for="FechaInicio" class="control-label"></label>
            <input type="date" name="FechaInicio" class="form-control" required />
        </div>
        <div class="input-group-sm">
            <label for="FechaFinal" class="control-label"></label>
            <input type="date" name="FechaFinal" class="form-control" required />
        </div>
        <button type="submit" class="btn btn-outline-secondary">Contratos vigentes</button>
    </form>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.InquilinoId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.InmuebleId)
                </th>
                <th>
                    Direccion
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FechaInicio)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FechaFin)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @(item.Inquilino.Nombre+" "+ item.Inquilino.Apellido)
                    </td>
                    <td>
                        @(item.Inmueble.Duenio.Nombre+" "+ item.Inmueble.Duenio.Apellido)
                    </td>
                    <td>
                        @(item.Inmueble.Direccion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FechaInicio)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FechaFin)
                    </td>

                    <td>
                        @Html.ActionLink("Actualizar", "Edit", new { id = item.Id }) ||
                        @Html.ActionLink("Detalles", "Details", new { id = item.Id }) ||
                        @Html.ActionLink("Eliminar", "Delete", new { id = item.Id })||
                        <a asp-route-id="@item.Id" asp-controller="Pagos" asp-action="VerPagos">Ver Pagos</a>


                    </td>
                </tr>
            }
        </tbody>
    </table>
