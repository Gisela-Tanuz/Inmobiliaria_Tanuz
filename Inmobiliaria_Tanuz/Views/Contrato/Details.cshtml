@model Inmobiliaria_Tanuz.Models.Contrato

@{
    ViewData["Title"] = "Details";
}

<h3 style="font-family:'Tahoma'">Detalles de su contrato</h3>

<div>
    <hr />
    <dl class="row align-tex-center">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IdContrato)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdContrato)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.InquilinoId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Inquilino.Apellido)
            @Html.DisplayFor(model => model.Inquilino.Nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.InmuebleId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Inmueble.Duenio.Apellido)
            @Html.DisplayFor(model => model.Inmueble.Duenio.Nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FechaInicio)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FechaInicio)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FechaFin)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FechaFin)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Inmueble.Direccion)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Inmueble.Direccion)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Inmueble.Uso)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Inmueble.Uso)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Inmueble.Tipo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Inmueble.Tipo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Inmueble.Precio)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Inmueble.Precio)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Inmueble.Estado)
        </dt>
        <dd class="col-sm-10">
            @{
                if (Model.Inmueble.Estado == true)
                {
                        <p>
                            <i class="bi bi-check"></i> Disponible
                        </p>
                }
                else
                {
                    <p>
                        <i class="bi bi-clock-history"></i>No disponible
                    </p>
                }
            }
        </dd>
    </dl>
</div>

<div>
    @Html.ActionLink("Actualizar", "Edit", new { id = Model.IdContrato }) |
    <a asp-action="Index">Volver a la lista</a>
</div>
