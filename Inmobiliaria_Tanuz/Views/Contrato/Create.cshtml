@model Inmobiliaria_Tanuz.Models.Contrato

@{
    ViewData["Title"] = "Create";
    List<Propietario> propietario = ViewBag.Propietario as List<Propietario>;
}

<h1>Crear un nuevo contrato</h1>

<h4>Contrato:</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="InquilinoId" class="control-label"></label>
                <input asp-for="InquilinoId" class="form-control" />
                <span asp-validation-for="InquilinoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InmuebleId" class="control-label">Dueño</label>
                <!--<input asp-for="InmuebleId" class="form-control" />-->
                <select class="control-label" name="InmuebleId">
                    @foreach(var item in propietario)
            {
                <option value="@item.IdPropietario">@(item.Nombre + " "+ item.Apellido)</option>
            }

                </select>
                <span asp-validation-for="InmuebleId" class="text-danger"></span>
            </div>
            <div>

            </div>
            <div class="form-group">
                <label asp-for="FechaInicio" class="control-label"></label>
                <input asp-for="FechaInicio" class="form-control" />
                <span asp-validation-for="FechaInicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaFin" class="control-label"></label>
                <input asp-for="FechaFin" class="form-control" />
                <span asp-validation-for="FechaFin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
