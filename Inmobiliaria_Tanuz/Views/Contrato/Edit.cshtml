@model Inmobiliaria_Tanuz.Models.Contrato

@{
    ViewData["Title"] = "Edit";
    IList<Inquilino> inquilinos = ViewBag.Inquilino as List<Inquilino>;
    IList<Inmueble> inmuebles = ViewBag.Inmueble as List<Inmueble>;
}

<h1 style="font-family:'Tahoma'">Actualizar</h1>

<h4 style="font-family:'Tahoma'">Contrato</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Inquilino</label>
                <select class="form-control" name="InquilinoId">
                    @foreach (var item in inquilinos)
                    {
                        @:<option @(item.Id == Model.InquilinoId ? "selected" : "") value="@item.Id">@(item.Nombre + " " + item.Apellido)</option>
                    }
                </select>
                <span asp-validation-for="InquilinoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Dueño de la Propiedad</label>
                <select class="form-control" name="InmuebleId">
                    @foreach (var item in inmuebles)
                    {
                        @:<option @(item.Id == Model.InmuebleId ? "selected" : "") value="@item.Id">@(item.Duenio.Nombre + " " + item.Duenio.Apellido)</option>
                    }
                </select>
                <span asp-validation-for="InmuebleId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaInicio" class="control-label"></label>
                <input asp-for="FechaInicio" class="form-control" />
                <span asp-validation-for="FechaInicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaFin" class="control-label"></label>
                <input asp-for="FechaFin" class="form-control" />
                <span asp-validation-for="FechaFin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Actualizar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
