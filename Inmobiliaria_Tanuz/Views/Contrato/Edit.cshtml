@model Inmobiliaria_Tanuz.Models.Contrato

@{
    ViewData["Title"] = "Edit";
    IList<Inquilino> inquilinos = ViewBag.Inquilino as List<Inquilino>;
    IList<Inmueble> inmuebles = ViewBag.Inmueble as List<Inmueble>;
}

<h3 style="font-family:'Tahoma'">Actualizar Contrato</h3>

<hr />
<div class="row align-tex-center">
    <div class="col-lg-12">
        <form asp-action="Edit" class="form-inline">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-lg-12">
                <label asp-for="IdContrato" class="control-label">Nº de contrato</label>
                <input asp-for="IdContrato" class="form-control-file" />
                <span asp-validation-for="IdContrato" class="text-danger"></span>
            </div>
            <div class="col-lg-6">
                <label class="control-label">Inquilino</label>
                <select class="form-control-file" name="InquilinoId">
                    @foreach (var item in inquilinos)
                    {
                        @:<option @(item.IdInquilino == Model.InquilinoId ? "selected" : "") value="@item.IdInquilino">@(item.Nombre + " " + item.Apellido)</option>
                    }
                </select>
                <span asp-validation-for="InquilinoId" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label class="control-label">Dueño de la Propiedad</label>
                <select class="form-control-file" name="InmuebleId">
                    @foreach (var item in inmuebles)
                    {
                        @:<option @(item.IdInmueble == Model.InmuebleId ? "selected" : "") value="@item.IdInmueble">@(item.Duenio.Nombre + " " + item.Duenio.Apellido)</option>
                    }
                </select>
                <span asp-validation-for="InmuebleId" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="FechaInicio" class="control-label">Fecha de inicio</label>
                <input asp-for="FechaInicio" class="form-control-file" />
                <span asp-validation-for="FechaInicio" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="FechaFin" class="control-label">Fecha final</label>
                <input asp-for="FechaFin" class="form-control-file" />
                <span asp-validation-for="FechaFin" class="text-danger"></span>
            </div>
            <div class="col-md-3">
                <input type="submit" value="Actualizar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
