@model IEnumerable<Inmobiliaria_Tanuz.Models.Inmueble>

@{
    ViewData["Title"] = "Index";
}

<h3 style="font-family:'Tahoma'" class="text-center">Lista de  Inmuebles.</h3>
<p><a class="btn btn-warning" style="font-family:Tahoma" asp-action="Create">Agregar Inmueble</a></p>
<p><a class="btn btn-outline-warning" style="font-family:Tahoma" asp-action="Disponibles">Ver inmuebles disponibles</a></p>





<table class="table table-striped table-hover">
    <thead class="table-warning">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdInmueble)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PropietarioId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Direccion)
            </th>
     
            <th>
                @Html.DisplayNameFor(model => model.Tipo)
            </th>
          
            <th>
                @Html.DisplayNameFor(model => model.Precio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Imagen)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdInmueble)
            </td>
            <td>
                @(item.Duenio.Nombre+" "+ item.Duenio.Apellido)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Direccion)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.Tipo)
            </td>
           
            <td>
                @Html.DisplayFor(modelItem => item.Precio)
            </td>
            <td>
                @{
                    if (item.Estado == true)
                    {
                        <div class="ok">
                            <div class="text-center">
                                <i class="bi bi-check-lg">Disponible</i>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="falso">
                            <div class="text-center">
                               <i class="bi bi-clock-history">No disponible</i>
                            </div>
                        </div>
                    }
                }
            </td>
            <td>
                <img width="32" src="@item.Imagen">
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdInmueble" title="Actualizar"><i class="bi bi-pencil-square"></i></a>
                <a asp-action="Details" asp-route-id="@item.IdInmueble" title="Detalles"><i class="bi bi-card-list"></i></a>
                <a asp-action="Delete" asp-route-id="@item.IdInmueble" title="Eliminar"><i class="bi bi-trash"></i></a>
            </td>

        </tr>
        }
    </tbody>
</table>
