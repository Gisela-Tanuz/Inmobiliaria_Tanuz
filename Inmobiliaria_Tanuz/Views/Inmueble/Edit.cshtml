@model Inmobiliaria_Tanuz.Models.Inmueble

@{
    ViewData["Title"] = "Edit";
    IList<Propietario> propietario = ViewBag.Propietario as List<Propietario>;
   
}

<h3 style="font-family:'Tahoma'">Actualizar los datos del inmueble</h3>

<hr />
<div class="row align-tex-center">
    <div class="col-lg-12">
        <form asp-action="Edit" enctype="multipart/form-data" class="form-inline">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-lg-6">
                <label asp-for="IdInmueble" class="control-label"></label>
                <input asp-for="IdInmueble" class="form-control-file" />
                <span asp-validation-for="IdInmueble" class="text-danger"></span>
            </div>
            <div class="col-lg-6">
                <label class="control-label">Propietario</label>
                <select class="form-control-file" name="PropietarioId">
                    @foreach (var item in propietario)
                    {
                        @:<option @(item.IdPropietario == Model.PropietarioId ? "selected" : "") value="@item.IdPropietario">@(item.Nombre + " " + item.Apellido)</option>
                    }
                </select>
                <span asp-validation-for="PropietarioId" class="text-danger"></span>
            </div>
            <div class="col-lg-6">
                <label asp-for="Direccion" class="control-label"></label>
                <input asp-for="Direccion" class="form-control-file" />
                <span asp-validation-for="Direccion" class="text-danger"></span>
            </div>
            <div class="col-lg-6">
                <label asp-for="Uso" class="control-label"></label>
                <input asp-for="Uso" class="form-control-file" />
                <span asp-validation-for="Uso" class="text-danger"></span>
            </div>
            <div class="col-lg-6">
                <label asp-for="Tipo" class="control-label"></label>
                <input asp-for="Tipo" class="form-control-file" />
                <span asp-validation-for="Tipo" class="text-danger"></span>
            </div>
            <div class="col-lg-6">
                <label asp-for="Ambientes" class="control-label"></label>
                <input asp-for="Ambientes" class="form-control-file" />
                <span asp-validation-for="Ambientes" class="text-danger"></span>
            </div>
            <div class="col-lg-6">
                <label asp-for="Precio" class="control-label"></label>
                <input asp-for="Precio" class="form-control-file" />
                <span asp-validation-for="Precio" class="text-danger"></span>
            </div>

            <div class="col-lg-6 form-check">
                <label class="form-check-label">
                    <input class="form-check-inline" asp-for="Estado" /> @Html.DisplayNameFor(model => model.Estado)
                </label>
            </div>
            
            <div class="col-lg-3">
                <input type="submit" value="Actualizar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
