@model Inmobiliaria_Tanuz.Models.Inmueble

@{
    ViewData["Title"] = "Create";
    IList<Propietario> propietario = ViewBag.Propietario as List<Propietario>;
    }

<h3 style="font-family:Tahoma">Agregar un nuevo inmueble</h3>

<hr />
<div class="row d-flex justify-content-center">
    <div class="col-lg-12">
        <form asp-action="Create" enctype="multipart/form-data" class="form-inline">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-lg-6">
                <label class="control-label">Propietario</label>
                <select class="form-control-file" name="PropietarioId">
                    @foreach (var item in propietario)
                    {
                        <option value="@item.IdPropietario">@(item.Nombre + " " + item.Apellido)</option>
                    }
                </select>
                <span asp-validation-for="PropietarioId" class="text-danger"></span>
            </div>
            <div class="col-lg-6">
                <label asp-for="Direccion" class="control-label"></label>
                <input asp-for="Direccion" class="form-control-file" />
                <span asp-validation-for="Direccion" class="text-danger"></span>
            </div>
            <div class="col-lg-6">
                <label asp-for="Uso" class="control-label"></label>
                <input asp-for="Uso" class="form-control-file" />
                <span asp-validation-for="Uso" class="text-danger"></span>
            </div>
            <div class="col-lg-6">
                <label asp-for="Tipo" class="control-label"></label>
                <input asp-for="Tipo" class="form-control-file" />
                <span asp-validation-for="Tipo" class="text-danger"></span>
            </div>
            <div class="col-lg-6">
                <label asp-for="Ambientes" class="control-label"></label>
                <input asp-for="Ambientes" class="form-control-file" />
                <span asp-validation-for="Ambientes" class="text-danger"></span>
            </div>
            <div class="col-lg-6">
                <label asp-for="Precio" class="control-label"></label>
                <input asp-for="Precio" class="form-control-file" />
                <span asp-validation-for="Precio" class="text-danger"></span>
            </div>
            <div class="col-lg-6">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Estado" /> @Html.DisplayNameFor(model => model.Estado)
                </label>
            </div>
            <div class="col-lg-6">
                <label asp-for="ImagenFile" class="control-label">Imagen</label>
                <input type="file" class="form-control-file"  name="ImagenFile" />
                <span asp-validation-for="ImagenFile" class="text-danger"></span>
            </div>
            <div class="col-md-3 m-2">

                <p><input type="submit" value="Agregar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a></p>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
