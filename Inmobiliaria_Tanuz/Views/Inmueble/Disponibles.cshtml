@model IEnumerable<Inmobiliaria_Tanuz.Models.Inmueble>

@{
    ViewData["Title"] = "Disponibles";
}


@if (User.IsInRole("Administrador") || User.IsInRole("Empleado"))
{
    
        <h1 style="font-family:'Tahoma'">Inmuebles Disponibles</h1>
        <hr>
        <p>
            <a class="btn btn-outline-warning" style="font-family:'Tahoma'" asp-action ="Create">Crear Nuevo</a>
        </p>
    }


<table class="table table-striped table-hover">
    <thead class="table-warning">
        <tr>
            @if (User.IsInRole("Administrador"))
            {
                <th>
                    @Html.DisplayNameFor(model => model.IdInmueble)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PropietarioId)
                </th>
                }
                <th>
                    @Html.DisplayNameFor(model => model.Direccion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Uso)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Tipo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Ambientes)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Precio)
                </th>
                <th></th>
            </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            @if (User.IsInRole("Administrador"))
            {
                <td>
                    @Html.DisplayFor(modelItem => item.IdInmueble)
                </td>
                <td>
                    @(item.Duenio.Nombre + " " + item.Duenio.Apellido)
                </td>
            }
            <td>
                @Html.DisplayFor(modelItem => item.Direccion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Uso)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tipo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ambientes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Precio)
            </td>
         
            <td>

                <a asp-action="Edit" asp-route-id="@item.IdInmueble" title="Actualizar"><i class="bi bi-pencil-square"></i></a>
                <a asp-action="Delete" asp-route-id="@item.IdInmueble" title="Eliminar"><i class="bi bi-trash"></i></a>
                <a asp-route-id="@item.IdInmueble " asp-controller="Contrato" asp-action="" title="Crear contrato"><i class="bi bi-file-earmark-post"></i></a>
            </td>
            
            </tr>
        }
    </tbody>
</table>
<div>
    <a class="btn btn-outline-secondary" style="font-family:Tahoma" asp-action="Index">Volver a la lista</a>
</div>
