@model Inmobiliaria_Tanuz.Models.Usuario

@{
    ViewData["Title"] = "Edit";
}

<h3 style="font-family:'Tahoma'">Actaulizar los datos del Usuario</h3>

<hr />
<div class="row align-tex-center">
    <div class="col-md-12">
        <form asp-action="Edit" enctype="multipart/form-data" class="form-inline">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="col-md-6">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control-file" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>


            <div class="col-md-6">
                <label asp-for="Apellido" class="control-label"></label>
                <input asp-for="Apellido" class="form-control-file" />
                <span asp-validation-for="Apellido" class="text-danger"></span>
            </div>


            <div class="col-md-6">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control-file" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="Clave" class="control-label"></label>
                <input asp-for="Clave" class="form-control-file" />
                <span asp-validation-for="Clave" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="AvatarFile" class="control-label">Foto</label>
                <input type="file" name="AvatarFile" class="form-control-file" />
                <span asp-validation-for="AvatarFile" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="Rol" class="control-label">Rol que ocupa</label>
                <select asp-for="Rol" class="form-control-file" name="Rol" value="@Model.Rol">
                    <option value="1">Super Administrador</option>
                    <option value="2">Administrador</option>
                    <option value="3">Empleado</option>
                </select>
                <span asp-validation-for="Rol" class="text-danger"></span>
            </div>
            <div class="col-md-2 m-2">

                <input type="submit" value="Actualizar" class="btn btn-primary" />
                </div>
                <div class="col-md-2 m-3">
                    <a asp-controller="Usuario" asp-action="Index" class="btn btn-secondary" role="button">Cancelar</a>
                </div>
</form>
    </div>
  
</div>



