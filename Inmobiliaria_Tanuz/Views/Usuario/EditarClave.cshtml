@model Inmobiliaria_Tanuz.Models.Usuario

@{
    ViewData["Title"] = "EditarClave";
}

<h3>Actualizar contraseña</h3>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditarClave">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            

            <div class="form-group">
                <label asp-for="Clave" class="control-label"></label>
                <input asp-for="Clave" class="form-control" />
                <span asp-validation-for="Clave" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClaveNueva" class="control-label"></label>
                <input asp-for="ClaveNueva" class="form-control" />
                <span asp-validation-for="ClaveNueva" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Aceptar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver a la Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
