@model IEnumerable<Inmobiliaria_Tanuz.Models.Propietario>

@{
    ViewData["Title"] = "Index";
    Inmueble i = ViewBag.Inmueble as Inmueble;
}

<h3 style="font-family:Tahoma" class="text-center">Lista de propietarios.</h3>
<hr>
<p>
    <a class="btn btn-outline-warning" style="font-family:Tahoma" asp-action="Create">Agregar propietarios</a>
</p>
<table class="table table-striped table-hover">
    <thead class="headerTable" >
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdPropietario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apellido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefono)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Usuario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AvatarProp)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdPropietario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefono)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Usuario)
            </td>
            <td>
                <img width="32" src="@item.AvatarProp">
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdPropietario" title="Actualizar"><i class="bi bi-pencil-square"></i></a>
                <a asp-action="Details" asp-route-id="@item.IdPropietario" title="Detalles"><i class="bi bi-card-list"></i></a>
                <a asp-action="Delete" asp-route-id="@item.IdPropietario" title="Eliminar"><i class="bi bi-trash"></i></a>
                <a asp-action="PorPropietario" asp-route-id="@item.IdPropietario" title="Ver propiedades"><i class="bi bi-house-fill"></i></a>
               
            </td>
        </tr>
        }
    </tbody>
</table>
