@model Inmobiliaria_Tanuz.Models.Propietario

@{
    ViewData["Title"] = "Edit";
}

<h3 style="font-family:'Tahoma'">Actualizar los datos del propietario.</h3>

<hr />
<div class="row align-tex-center">
    <div class="col-lg-12">
        <form asp-action="Edit" enctype="multipart/form-data" class="form-inline">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="col-lg-6">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control-file" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="col-lg-6">
                <label asp-for="Apellido" class="control-label"></label>
                <input asp-for="Apellido" class="form-control-file" />
                <span asp-validation-for="Apellido" class="text-danger"></span>
            </div>
            <div class="col-lg-6">
                <label asp-for="Dni" class="control-label"></label>
                <input asp-for="Dni" class="form-control-file" />
                <span asp-validation-for="Dni" class="text-danger"></span>
            </div>
            <div class="col-lg-6">
                <label asp-for="Telefono" class="control-label"></label>
                <input asp-for="Telefono" class="form-control-file" />
                <span asp-validation-for="Telefono" class="text-danger"></span>
            </div>
            <div class="col-lg-6">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control-file" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Contraseña" class="control-label"></label>
                <input asp-for="Contraseña" class="form-control" />
                <!--<span asp-validation-for="Contraseña" class="text-danger"></span>-->
            </div>
           
            <div class="col-lg-6">
                <label asp-for="Usuario" class="control-label"></label>
                <input asp-for="Usuario" class="form-control-file" />
                <span asp-validation-for="Usuario" class="text-danger"></span>
            </div>
            <div class="col-lg-6">
                <label asp-for="AvatarPropFile" class="control-label">Foto</label>
                <input type="file" name="AvatarPropFile" />
                <span asp-validation-for="AvatarPropFile" class="text-danger"></span>
            </div>
            <div class="col-12">
                <div class="col-lg-3">
                    <input type="submit" value="Actualizar" class="btn btn-primary" />
                </div>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
